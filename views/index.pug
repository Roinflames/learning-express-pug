extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				h1.text-center.login-title Panel de Administador
					h2.text-center.login-title AppEnerg√≠a
					div.account-wall
						img(class='profile-img', src='https://ftorres19.files.wordpress.com/2011/12/utem1.png?w=614')
						form(class='form-signin', action='/login', method='POST')
							input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
							input(type='password', name='password' class='form-control', placeholder='Password', required)
							p Recuerdame
							a(href='/', class='text-center') Olvido su password?
							p
							button(class='btn btn-lg btn-primary btn-block', type='submit') Ingresar
							span.clearfix
						a(href='/signup', class='text-center new-account') Crear cuenta
						a(href='/home', class='text-center new-account') Usar sin registro
					#message
					if message
						h1.text-center.error-message #{message}
