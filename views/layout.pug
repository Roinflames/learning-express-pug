doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    // Import Google Icon Font
    link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
    // Import materialize.css
    link(rel='stylesheet', href='/stylesheets/materialize.min.css', type='text/css', media='screen,projection')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    //meta(http-equiv='refresh', content='5')

  body

    // Inicio barra navegacion
    nav.orange.lighten-2(role='navigation')
      .nav-wrapper.container
        a#logo-container.brand-logo(href='/home') NeoSolar
        ul
          li.right
            a(href='signout')
          a.right.dropdown-button.lighten-1(href='#', data-activates='dropdown1')
            i.material-icons menu
          li.right.hide-on-med-and-down
            a(href='estacion') Estación
          li.right.hide-on-med-and-down
            a(href='realtime') Real
          li.right.hide-on-med-and-down
            a(href='estado') Estado
          li.right.hide-on-med-and-down
            a(href='historico') Histórico



          // Dropdown Structure
          ul#dropdown1.dropdown-content
            li
              a.white-text.orange(href='estado') Estado
            li
              a.white-text.orange(href='historico') Histórico
            li
              a.white-text.orange(href='estacion') Estación
            li
              a.white-text.orange(href='signout') Cerrar Sesión

        //ul#nav-mobile.side-nav
          li
            a(href='#') Navbar Link
        //a.button-collapse(href='#', data-activates='nav-mobile')
          i.material-icons menu
    // fin barra
    block content
    // Import jQuery before materialize.js
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(type='text/javascript', src='/js/materialize.min.js')
