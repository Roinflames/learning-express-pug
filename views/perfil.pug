extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Bienvenido #{user.firstName}. Revise su perfil:
						div.signup-wall
							ul.user-details
								li Nombre de usuario ---> #{user.username}
								li Email    ---> #{user.email}
								li Password ---> #{user.password}
							a(href='/signout', class='text-center new-account') Sign Out
