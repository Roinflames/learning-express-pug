doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    // Import Google Icon Font
    link(rel='stylesheet', href='http://fonts.googleapis.com/icon?family=Material+Icons')
    // Import materialize.css
    link(rel='stylesheet', href='stylesheets/materialize.min.css', type='text/css', media='screen,projection')
    // Let browser know website is optimized for mobile
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    //meta(http-equiv='refresh', content='5')

  body
    div.container
      div.row
        div.col-sm-6.col-md-4.col-md-offset-4
          h1.center-align.login-title Registro de Usuario
            div.signup-wall
              img(class='profile-img', src='https://ftorres19.files.wordpress.com/2011/12/utem1.png?w=614')
              form(class='form-signin', action='/signup', method='POST')
                input(type='text', name='username', class='form-control', placeholder='Nombre',required, autofocus)
                input(type='email', name='email', class='form-control', placeholder='Email',required)
                input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
                p
                button(class='btn btn-lg btn-primary btn-block', type='submit') Registrar
                p
                a(href='/', class='text-center') Volver
                span.clearfix
            #message
              if message
                h1.text-center.error-message #{message}
    // Import jQuery before materialize.js
    script(type='text/javascript', src='https://code.jquery.com/jquery-2.1.1.min.js')
    script(type='text/javascript', src='js/materialize.min.js')
    script(type='text/javascript', src='js/reload-pug.js')
